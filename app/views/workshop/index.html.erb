<h1>Listing Workshops</h1>
<% @ws.each do |ws|%>
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header">
        <h5><%= ws.name %></h5>
      </div>
      <div class="card-body">
        <p class="card-title"><%= ws.description %></p>
        <h4><span class="badge bg-success">From <%= ws.start_date%> to <%= ws.end_date%></span></h4>
        <h4><span class="badge bg-warning">From <%= ws.start_time%> to <%= ws.end_time%></span></h4>
        <%= link_to "Show details", ws, class: "btn btn-primary" %>
      </div>
    </div><br>
  </div>
<% end %>